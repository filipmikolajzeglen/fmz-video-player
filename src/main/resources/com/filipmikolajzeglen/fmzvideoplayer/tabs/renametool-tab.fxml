<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?><?import javafx.scene.control.Button?><?import javafx.scene.control.Label?><?import javafx.scene.control.TableColumn?><?import javafx.scene.control.TableView?><?import javafx.scene.control.TextField?><?import javafx.scene.layout.BorderPane?><?import javafx.scene.layout.HBox?><?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.filipmikolajzeglen.fmzvideoplayer.player.view.PlayerRenameToolView"
      style="-fx-padding: 11 40 40 40; -fx-background-color: white;" visible="false">
   <top>
      <VBox spacing="10" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Button onAction="#handleSelectFolder" text="Select folder" />
            <Label fx:id="selectedFolderLabel" text="No folder was selected" />
         </HBox>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Ignore text (e.g. series name):" />
            <TextField fx:id="ignoreTextField" HBox.hgrow="ALWAYS" />
         </HBox>
      </VBox>
   </top>
   <center>
      <TableView fx:id="filesTableView" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="originalNameColumn" prefWidth="400.0" text="Current name" />
            <TableColumn fx:id="newNameColumn" prefWidth="400.0" text="New name" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <Button onAction="#handleApplyChanges" text="Apply changes">
            <HBox.margin>
               <Insets top="15.0" />
            </HBox.margin>
         </Button>
      </HBox>
   </bottom>
</BorderPane>