                     <Label text="Icon style:" GridPane.rowIndex="1" GridPane.columnIndex="0" />

                        <ComboBox fx:id="iconStyleComboBox" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Filled" />
                                 <String fx:value="Empty" />
                              </FXCollections>
                           </items>
                        </ComboBox>

                     <HBox alignment="CENTER_LEFT" spacing="15" GridPane.rowIndex="1" GridPane.columnIndex="2">
                        <SVGPath fx:id="previewPlayIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                        <SVGPath fx:id="previewPauseIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                        <SVGPath fx:id="previewNextIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                        <SVGPath fx:id="previewVolumeIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                     </HBox>

                     <!-- Wiersz 1: Kolor główny -->
                     <Label text="Primary color:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                     <ColorPicker fx:id="primaryColorPicker" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <value>
                           <Color red="0.486" green="0.619" blue="0.968" />
                        </value>
                     </ColorPicker>
                     <Slider fx:id="colorPreviewSlider" disable="true" value="50" GridPane.rowIndex="2" GridPane.columnIndex="2" />

                     <!-- Wiersz 2: Kolor główny -->
                     <Label text="Commercials" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-padding: 11 0 0 0" GridPane.rowIndex="3" GridPane.columnIndex="0" />
