                  <TextArea fx:id="consoleLogTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
               </VBox>

               <!-- Zawartość zakładki "About" -->
               <fx:include fx:id="aboutContent" source="tabs/about-tab.fxml"/>

               <!-- Zawartość zakładki "Advanced Settings" -->
               <VBox fx:id="advancedContent" alignment="TOP_CENTER" managed="false" spacing="30"
                     style="-fx-padding: 11 40 40 40; -fx-background-color: white;" visible="false">
                  <GridPane hgap="20" maxWidth="Infinity" vgap="10">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="45.0" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="25.0" />
                     </columnConstraints>

                     <!-- Wiersz 0: Styl ikon -->
