   <!-- Prawy panel z opcjami i przyciskiem Play -->
   <center>
      <BorderPane style="-fx-background-color: white;">
         <center>
            <StackPane>
               <!-- Zawartość zakładki "Quick Start" -->
               <VBox fx:id="quickStartContent" alignment="TOP_CENTER" spacing="30"
                     style="-fx-padding: 11 40 40 40; -fx-background-color: white;">
                  <GridPane hgap="20" vgap="10" maxWidth="Infinity">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                     </columnConstraints>

                     <!-- Wiersz 0: Etykiety -->
                     <Label fx:id="maxSeriesLabel" text="Max episodes of series per day" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                     <Label fx:id="maxEpisodesLabel" text="Max episodes per day" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                     <!-- Wiersz 1: Spinnery -->
                     <Spinner fx:id="maxSeriesSpinner" editable="true" initialValue="2" max="100" min="1" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                     <Spinner fx:id="maxEpisodesSpinner" editable="true" initialValue="30" max="100" min="1" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  </GridPane>

                  <HBox maxWidth="Infinity" spacing="10">
                     <StackPane HBox.hgrow="ALWAYS">
                        <TextField fx:id="videoMainSourceField" HBox.hgrow="ALWAYS" />
                        <Label fx:id="videoMainSourcePrompt" style="-fx-text-fill: #888;"
                              text="  Path to video resources" StackPane.alignment="CENTER_LEFT" />
                     </StackPane>
                     <Button onAction="#onChooseFolderClicked" text="..." />
                  </HBox>

                  <TableView fx:id="seriesTable" maxWidth="Infinity" VBox.vgrow="ALWAYS" styleClass="no-focus-table">
                     <columns>
                        <TableColumn fx:id="seriesNameColumn" text="Series Name" />
                        <TableColumn fx:id="episodeCountColumn" text="Episodes" />
                     </columns>
                  </TableView>

               </VBox>

               <!-- Zawartość zakładki "Advanced Settings" -->
               <VBox fx:id="advancedContent" alignment="TOP_LEFT" managed="false" spacing="20"
                     style="-fx-padding: 11 40 40 40; -fx-background-color: white;" visible="false">
                  <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="15">
                     <Label text="Icon style:" />
                     <ComboBox fx:id="iconStyleComboBox" prefWidth="100.0">
                        <items>
                           <FXCollections fx:factory="observableArrayList">
                              <String fx:value="Filled" />
                              <String fx:value="Empty" />
                           </FXCollections>
                        </items>
                     </ComboBox>
                     <HBox alignment="CENTER_LEFT" spacing="10">
                        <SVGPath fx:id="previewPlayIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                        <SVGPath fx:id="previewPauseIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                        <SVGPath fx:id="previewNextIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
                        <SVGPath fx:id="previewVolumeIcon" fill="#4d4d4d" scaleX="0.8" scaleY="0.8" />
